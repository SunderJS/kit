{
    "compilerOptions": {
        "outDir": "./build",
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "WebWorker",
            "ESNext"
        ],
        "types": [
            "@cloudflare/workers-types",
        ],
        "moduleResolution": "node",
        "alwaysStrict": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "importHelpers": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
    },
    "include": [
        "src/**/*.ts",
        "./test/**/*.ts",
        "./node_modules/@cloudflare/workers-types/index.d.ts",
    ],
    "exclude": [
        "node_modules/",
        "build/"
    ]
}